<image schemaversion="3.7" name="Network_Image_Installer">
  <description type="system">
    <author>Matthias Hopf</author>
    <contact>mhopf@suse.de</contact>
    <specification>Network image installer</specification>
  </description>
  <preferences>
<!--    <oem-swapsize>512</oem-swapsize> -->
    <oem-home>false</oem-home>
    <oem-boot-title>Network Image Installer</oem-boot-title>
<!-- default: usb image -->
<!--    <type filesystem="ext3" checkprebuilt="true" fsnocheck="true" boot="oemboot/suse-11.2">oem</type> -->
<!--    <type filesystem="clicfs" checkprebuilt="true" fsnocheck="true" boot="oemboot/suse-11.2">oem</type> -->
    <type fsreadwrite="ext3" fsreadonly="squashfs" checkprebuilt="true" fsnocheck="true" boot="oemboot/suse-11.2">split</type>
<!-- addon: iso image -->
    <type flags="clic" checkprebuilt="true" fsnocheck="true" boot="isoboot/suse-11.2">iso</type>
    <version>1.0.1</version>
    <packagemanager>zypper</packagemanager>
    <rpm-check-signatures>false</rpm-check-signatures>
    <rpm-force>false</rpm-force>
    <rpm-excludedocs>true</rpm-excludedocs>
    <locale>en_US</locale>
    <boot-theme>openSUSE</boot-theme>
    <size>100M</size>
  </preferences>
  <users group="root">
    <user name="root" shell="/bin/bash" pwd="$1$3t3vqXtz$5vCuNgQzOYDy3JfSalKjZ." home="/root"/>
  </users>
